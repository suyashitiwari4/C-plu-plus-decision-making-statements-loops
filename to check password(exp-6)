#include <iostream>
using namespace std;
int main(){
    string password = "suyashi@4";
    string user_password;
    int attempts=3;
    cout<<"You have only 3 attempts to access"<<endl;
    
    for(int i=0;i<attempts;i++){
        cout<<"Attempts"<<(i+1)<<":"<<endl;
        cout<<"Enter the user password:"<<endl;
        cin>>user_password;
    
      if(user_password!=password){
        cout<<"Acess not granted!"<<endl;
      }
      else {
        cout<<"Acess granted!"<<endl;
        return 0;
      }
      
    }
    cout<<"Too many attempts...Acess Denied!"<<endl;
   
    return 0 ;
    
}



//OUTPUT:
You have only 3 attempts to access
Attempts1:
Enter the user password:
sd
Acess not granted!
Attempts2:
Enter the user password:
3suy
Acess not granted!
Attempts3:
Enter the user password:
suyahi
Acess not granted!
Too many attempts...Acess Denied!


